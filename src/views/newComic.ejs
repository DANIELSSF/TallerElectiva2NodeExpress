<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('templates/header') %>
  <title>Nuevo Comic</title>
</head>

<body>

  <%- include('templates/navigation') %>
  <div class="container p-4">
    <form method="POST" target="/newComic" class="card card-body">

      <div class="form-group">
        <label for="title">Titulo</label>
        <input name="title" type="text" class="form-control" placeholder="Titulo del Comic" autofocus required>
      </div>

      <div class="form-group">
        <label for="title">Genero</label>
        <input name="gender" type="text" class="form-control" placeholder="Genero" autofocus required>
      </div>
      
      <div class="form-group">
        <label for="title">Autor</label>
        <input name="autor" type="text" class="form-control" placeholder="Stan lee" autofocus required>
      </div>

      <div class="form-group">
        <label for="image">Imagen</label>
        <input type="url" name="image" class="form-control" placeholder="http://website.com" required>
      </div>


      <div class="form-group">
        <label for="description">Descripcion</label>
        <textarea class="form-control" name="description" rows="2" required>
        </textarea>
      </div>

      <div class="form-group">
        <input type="submit" value="Confirmar" class="btn btn-primary">
      </div>
    </form>

  </div>

  <%- include('templates/footer') %>
</body>

</html>
